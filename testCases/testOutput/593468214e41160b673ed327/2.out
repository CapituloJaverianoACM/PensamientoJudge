#include <iostream>
#include <cstring>
#include <cstdio>
#include <bitset>

using namespace std;
#define MAX 100010

typedef long long ll;

int nums[ MAX ];
ll tot[ MAX ];
ll dp[ MAX ];
bitset< MAX > is;


ll fun( int pos ){
  if( pos >= MAX )
    return 0 ;
  if( dp[ pos ] != -1 )
    return dp[ pos ];
  dp[ pos ] = max( fun(pos+2) + tot[ pos ] , fun( pos +1 ) );
  // cout << pos << " " << dp[ pos ] << "\n";
  return dp[ pos ];
}

int main()
{
  int n ;
  scanf("%d",&n);
  for( int i = 0 ; i < n ; ++i )
    scanf("%d",&nums[ i ] );
  memset( tot , 0 , sizeof tot );
  memset( dp , -1 , sizeof dp );
  for( int i = 0 ; i < n ; ++i )
    tot[ nums[ i ] ] += nums[ i ];
  ll res = fun( 0 );
  printf("%I64d\n",res);
  return 0;
}
