#include <iostream>
#include <set>
#include <cstring>
#include <cstdio>

using namespace std;

typedef long long ll;
#define MAX 70

ll xx[ MAX ],yy[ MAX ];


int main()
{
  // ios::sync_with_stdio(false);
  // cin.tie(NULL);
  ll x,y,l,r;
  cin >> x >> y >> l >> r;
  ll posx = 0;
  xx [ posx ] = 1;
  while( xx[ posx ] < r )
  {
    xx[ posx+1 ] = xx[ posx ] * x;
    ++posx;
  }
  ll posy = 0;
  yy [ posy ] = 1;
  while( yy[ posy ] < r )
  {
    yy[ posy+1 ] = yy[ posy  ] * y;
    ++posy;
  }
  ll tot = 0;
  set< ll > ss;
  for( int i = 0; i <= posx ; ++i  )
    for( int j = 0 ; j <= posy ; ++j )
    {
      tot = xx[ i ] + yy[ j ];
      if( tot >= l && tot <= r )
        ss.insert( tot );
    }
  ss.insert( l );
  ss.insert( r );
  set< ll >::iterator it,it2;
  ll may = 0;
  for( it = ss.begin() , it2 = ss.begin() , ++it2 ; it != ss.end() && it2 != ss.end() ; ++it , ++it2 )
  {
    cout << "tt  " << (*it2)-(*it) << " " << *it2 << " " << *it << "\n";
    may = max( may , (*it2)-(*it) );
  }
  cout << may << "\n";
  return 0;
}
