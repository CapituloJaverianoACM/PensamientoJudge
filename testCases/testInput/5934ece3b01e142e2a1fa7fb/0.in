#include <iostream>
#include <set>

using namespace std;

int main()
{
  int n,c = 0;
  cin >> n ;
  set< int > pas;
  for( int i = 2 ; i <= n ; ++i )
    pas.insert( i );
  int pos = 1;
  int sum = 0;
  while( pas.size() )
  {
    int num  ;
    if( !(c%2) )
    {
      num = *(--pas.end());
    }
    else
    {
      num = *(pas.begin());

    }
    pas.erase(num);
    ++c;
    // cout << pos << " " << num << " " << n+1 << endl;
    sum += (pos + num )%(n+1);
    pos = num;
  }
  cout << sum << "\n";
  return 0;
}
